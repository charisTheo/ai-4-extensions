{
  "name": "Lux Mea Lex",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Making learning a fun experience with AI.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "storage",
    "activeTab",
    "notifications"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Lux Mea Lex"
  },
  "content_scripts": [
    {
      "js": [
        "content_scripts/index.js",
        "content_scripts/mdui.global.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "material-icons.woff2"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}