{
    "name": "Lux Mea Lex",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Making learning a fun experience with AI.",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["sidePanel", "scripting", "activeTab", "notifications"],
    "side_panel": {
      "default_path": "sidepanel/index.html"
    },
    "action": {
      "default_title": "Lux Mea Lex"
    },
    "content_scripts": [
    {
      "js": ["scripts/index.js"],
      "matches": [ "https://*/*", "https://*/" ]
    }
  ]
  }